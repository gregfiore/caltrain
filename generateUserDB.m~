% Make a few users and save them off

%         username = '';                  % User name
%         useremail = '';                 % User email
%         userapn = 0;                    % User device APN identifier
%         notificationSetting = [0 0];    % Notification settings
%         commDir = 0;                    % To-work communte direction (0 is NB)
%         homeStation = '';               % home Station
%         workStation = '';               % Work Station
%         workTimeEarly = 0;              % Work-bound times
%         workTimeLate = 0;
%         homeTimeEarly = 0;              % Home-bound times
%         homeTimeLate = 0;
%         trains = 0;                     % Trains

clear all; close all; loadCTdata; 
% main_caltrain_process;

stations = {'San Jose','Santa Clara','Mountain View','Palo Alto','Menlo Park','Redwood City','Milbrae','22nd Street','San Francisco'};

station_cnt = 1;


for j = 1:4
    apn = floor(rand(1)*100000);
    u(station_cnt) = User('frank',apn);
    
    u(station_cnt).setCommute('commDir',0,...
        'homeStation',stations{j},...
        'workStation',stations{end-j+1},...
        'workTimeEarly',7/24,...
        'workTimeLate',9/24,...
        'homeTimeEarly',16/24,...
        'homeTimeLate',19/24);
        u(station_cnt).notificationSetting = [1 1];

    station_cnt = station_cnt + 1;
    
    apn = floor(rand(1)*100000);
    u(station_cnt) = User('frank',apn);
    
    u(station_cnt).setCommute('commDir',1,...
        'homeStation',stations{end-j+1},...
        'workStation',stations{j},...
        'workTimeEarly',7/24,...
        'workTimeLate',9/24,...
        'homeTimeEarly',16/24,...
        'homeTimeLate',19/24);
    u(station_cnt).notificationSetting = [1 1];
    
    station_cnt = station_cnt + 1;
    
    
end

u(station_cnt) = User('Greg',1);
u(station_cnt).setCommute('commDir',1,...
        'homeStation','San Francisco',...
        'workStation','Mountain View',...
        'workTimeEarly',7/24,...
        'workTimeLate',9/24,...
        'homeTimeEarly',16/24,...
        'homeTimeLate',19/24);

    u(station_cnt).notificationSetting = [1 1];

    
station_cnt = station_cnt + 1;
 
%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Case 1 User             %
% CI and MI Notifications %
%%%%%%%%%%%%%%%%%%%%%%%%%%%

u(station_cnt) = User('Case 1',2);
u(station_cnt).setCommute('commDir',1,...
        'homeStation','San Francisco',...
        'workStation','Mountain View',...
        'workTimeEarly',7/24,...
        'workTimeLate',9/24,...
        'homeTimeEarly',16/24,...
        'homeTimeLate',19/24);

u(station_cnt).notificationSetting = [1 1];    
station_cnt = station_cnt + 1;

%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Case 2 User             %
% CI only   Notifications %
%%%%%%%%%%%%%%%%%%%%%%%%%%%

u(station_cnt) = User('Case 2',3);
u(station_cnt).setCommute('commDir',1,...
        'homeStation','San Francisco',...
        'workStation','Mountain View',...
        'workTimeEarly',7/24,...
        'workTimeLate',9/24,...
        'homeTimeEarly',16/24,...
        'homeTimeLate',19/24);

u(station_cnt).notificationSetting = [1 0];    
station_cnt = station_cnt + 1;       
    
%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Case 3 User             %
% MI only   Notifications %
%%%%%%%%%%%%%%%%%%%%%%%%%%%

u(station_cnt) = User('Case 2',3);
u(station_cnt).setCommute('commDir',1,...
        'homeStation','San Francisco',...
        'workStation','Mountain View',...
        'workTimeEarly',7/24,...
        'workTimeLate',9/24,...
        'homeTimeEarly',16/24,...
        'homeTimeLate',19/24);

u(station_cnt).notificationSetting = [1 0];    
station_cnt = station_cnt + 1;  


    
save('UserDB.mat','u')